<div class="center-absolute center-valign">
  <div class="mdl-grid sessions no-margin">
    <div class="mdl-card mdl-shadow--2dp mdl-cell mdl-cell--12-col-phone mdl-cell--8-col-tablet mdl-cell--6-col-desktop mdl-cell--3-offset-desktop">
      <div class="mdl-card__title center-align">
        <h3 class="mdl-typography--font-bold mb-0">로그인</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {:class => "mdl-cell mdl-cell--12-col"}) do |f| %>
            <div class="mdl-grid">
              <div class="mdl-cell mdl-cell--8-col-desktop mdl-cell--2-offset-desktop mdl-cell--6-col-tablet mdl-cell--1-offset-tablet mdl-textfield mdl-js-textfield pt-0">
                <%= f.label :email, :class => "mdl-textfield__label" %><br />
                <%= f.email_field :email, autofocus: true, :class => "mdl-textfield__input" %>
              </div>

              <div class="mdl-cell mdl-cell--8-col-desktop mdl-cell--2-offset-desktop mdl-cell--6-col-tablet mdl-cell--1-offset-tablet mdl-textfield mdl-js-textfield pt-0">
                <%= f.label :password, :class => "mdl-textfield__label" %><br />
                <%= f.password_field :password, autocomplete: "off", :class => "mdl-textfield__input" %>
              </div>
              <div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--2-offset-desktop mdl-cell--3-col-tablet mdl-cell--1-offset-tablet left-align center-valign">
                <% if devise_mapping.rememberable? -%>
                  <%= f.label :remember_me, :class => "mdl-checkbox mdl-js-checkbox mdl-js-ripple-effect" do %>
                    <%= f.check_box :remember_me, :class => "mdl-checkbox__input" %>
                    <span class="mdl-checkbox__label">Remeber me</span>
                  <% end %>
                <% end -%>
              </div>
              <div class="mdl-cell mdl-cell--4-col-desktop mdl-cell--3-col-tablet right-align">
                <%= render "devise/shared/links" %>
              </div>
            </div>

            <div class="mdl-grid">
              <%= f.submit "로그인하기", :class => "mdl-cell mdl-cell--8-col-desktop mdl-cell--2-offset-desktop mdl-cell--6-col-tablet mdl-cell--1-offset-tablet mdl-cell mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--gradient" %>
            </div>
          <% end %>

          
      </div>
    </div>
  </div>
</div>
