<% @feeds.each do |f| %>
  <div class="demo-card-wide mdl-card mdl-shadow--2dp my-card">
    <div class="mdl-card__title">
      <ul class="demo-list-two mdl-list full-width no-padding no-margin">
        <li class="mdl-list__item mdl-list__item--two-line no-padding no-margin">
          <span class="mdl-list__item-primary-content">
            <i class="material-icons mdl-list__item-avatar">person</i>
            <span><%= f.user.name %></span>
            <span class="mdl-list__item-sub-title"><%= f.created_at.strftime("%Y-%m-%d") %></span>
          </span>
        </li>
      </ul>
    </div>
    <div class="mdl-card__supporting-text">
      <strong><div><%= f.title %></div></strong>
      <div><%= f.content %></div>
    </div>
    <div class="mdl-card__actions mdl-card--border">
      <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
        댓글 더보기
      </a>
      <ul class="demo-list-three mdl-list no-margin no-padding">
        <% f.feed_comments.each do |c| %>
          <li class="mdl-list__item">
            <span class="mdl-list__item-primary-content">
              <span class="mdl-list__item-text-body">
                <strong><span><%= c.user.name %></span></strong> <%= c.content %>
              </span>
            </span>
            <% if c.user == current_user %>
              <span class="mdl-list__item-secondary-content">
                <a class="mdl-list__item-secondary-action" href="/feeds/<%= f.id %>/comments/<%= c.id %>"><i class="material-icons">delete</i></a>
              </span>
            <% end %>
          </li>
        <% end %>
      </ul>
      <div class="mdl-grid--no-spacing">
        <form action='/feeds/<%=f.id%>/comments' method='POST'>
          <div class="mdl-textfield mdl-js-textfield mdl-cell--9-col">
            <input class="mdl-textfield__input" type="text" id="sample1">
            <label class="mdl-textfield__label" for="sample1">댓글 작성하기</label>
          </div>
          <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
            등록
          </button>
        </div>
      </form>
    </div>
    <div class="mdl-card__menu">
      <% if f.user == current_user %>
        <a href="#" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
          <i class="material-icons">edit</i>
        </a>
        <a href="/feeds/<%= f.id %>" data-method="DELETE" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
          <i class="material-icons">delete</i>
        </a>
      <% else %>
        <% if current_user.followings.include? f.user %>
          <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
            <i class="material-icons">person_add</i>
          </a>
        <% else %>
          <a href="/follows/<%= f.user.id %>" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect mdl-color--grey-500">
            <i class="material-icons">person_add</i>
          </a>
        <% end %>
        <% if f.liking_users.include? current_user %>
          <a href="/feeds/<%= f.id %>/like" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
            <i class="material-icons">favorite</i>
          </a>
        <% else %>
          <a href="/feeds/<%= f.id %>/like" class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect mdl-color--grey-500">
            <i class="material-icons">favorite</i>
          </a>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
